extends ../layout
block content
        h1.text-center Chúng tôi cam kết phi lợi nhuận
        hr
        .row
            .col-xs-12.col-sm-10.col-sm-offset-1
                for nonprofit in nonprofits
                    .col-xs-12.col-sm-6.col-md-4.height-400
                        .text-center
                            h2= nonprofit.displayName
                            img.testimonial-image.img-responsive.img-center(src=nonprofit.imgUrl)
                            .button-spacer
                            a.text-center(href='/commit?nonprofit=#{nonprofit.name}') Cam kết #{nonprofit.displayName}
                            p= nonprofit.description
