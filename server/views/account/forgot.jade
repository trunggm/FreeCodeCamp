extends ../layout
block content
    .col-sm-6.col-sm-offset-3
      form(method='POST', action="/forgot")
        h2.text-center Khôi phục mật khẩu
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          p.large-p Hãy nhập địa chỉ email. Chúng tôi sẽ gửi cho bạn hướng dẫn khôi phục mật khẩu.
          input.form-control.input-lg(type='email', name='email', id='email', placeholder='Email', autofocus=true required)
        .form-group
          button.btn.btn-primary.btn-lg.btn-block(type='submit')
            i.fa.fa-key
            | Khôi phục mật khẩu

